{
  "name": "token-price-watch",
  "displayName": "Token Price Watch",
  "description": "Watch coin contract price via binance API",
  "version": "1.0.0",
  "publisher": "ludis",
  "keywords": [
    "btc",
    "eth",
    "token",
    "price",
    "binance",
    "vscode"
  ],
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "token-price-watch.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable display price"
        },
        "token-price-watch.symbols": {
          "type": "array",
          "default": [
            "btcusdt",
            "ethusdt"
          ],
          "description": "",
          "items": {
            "type": "string"
          },
          "markdownDescription": "symbols array",
          "scope": "resource",
          "title": "Enabled Language Ids",
          "uniqueItems": true
        },
        "token-price-watch.symbolText": {
          "type": "string",
          "default": "Full",
          "enum": [
            "Full",
            "Token",
            "Initials",
            "None"
          ],
          "enumDescriptions": [
            "Full: show full symbol, like: BTCUSDT",
            "Token: show token symbol, like: BTC",
            "Initials: show token initials, for example BTC shows B",
            "None: show nothing"
          ]
        },
        "token-price-watch.updateInterval": {
          "type": "number",
          "default": 3000,
          "minimum": 1000,
          "description": "Configuring polling requests the latest data time interval, Unit: milliseconds"
        },
        "token-price-watch.url": {
          "type": "string",
          "default": "https://fapi.binance.com/fapi/v1/ticker/price",
          "format": "uri",
          "description": "Configuring contract base API, (try not to modify)"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flute/vscode-token-price-watch"
  },
  "devDependencies": {
    "@types/vscode": "^1.65.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5",
    "@vscode/test-electron": "^2.1.2"
  },
  "dependencies": {
    "axios": "^0.26.1"
  }
}
